<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frist"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_teacher"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_116sdp"
        android:layout_marginEnd="@dimen/_116sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:backgroundTint="#DDDDDD"
        android:text="@string/teacher"
        android:textAllCaps="false"
        android:textColor="@color/text_buttons"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toTopOf="@+id/btn_student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_student"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_120sdp"
        android:layout_marginEnd="@dimen/_116sdp"
        android:layout_marginBottom="@dimen/_320sdp"
        android:text="@string/student"
        android:backgroundTint="#DDDDDD"
        android:textAllCaps="false"
        android:textColor="@color/text_buttons"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>